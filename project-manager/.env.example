# MongoDB Configuration
CONNECTION_STRING=mongodb+srv://username:password@your-cluster.mongodb.net/
DB_NAME=ProjectManager
PORT=3000

# GitHub OAuth Configuration
# Create a GitHub OAuth App at: https://github.com/settings/developers
# For local: use http://localhost:3000/auth/github/callback
# For production: use https://your-app-name.onrender.com/auth/github/callback
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
CALLBACK_URL=http://localhost:3000/auth/github/callback

# Session Secret (generate a random string)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_random_secret_key_here_min_32_characters

# Environment Mode
NODE_ENV=development

# Client URL for CORS (optional, for frontend apps)
CLIENT_URL=http://localhost:3000